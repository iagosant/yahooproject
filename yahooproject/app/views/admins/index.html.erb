<p id="notice"><%= notice %></p>

<h1>Listing Admins</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Source name</th> -->
      <th>Title</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.title %></td>
        <td><%= admin.link %></td>
        <td><%= admin.synopsis %></td>
        <td><%= image_tag admin.main_photo.url(:medium) %></td>
      </tr>

      <tr>
        <td><%= admin.blurb %></td>
        <td><%= admin.when %></td>
        <td><%= admin.source %></td>
      </tr>

      <tr>
        <td><%= admin.second_featured_story_title %></td>
        <td><%= admin.second_featured_story_link %></td>
        <td><%= admin.second_featured_story_synopsis %></td>
        <td><%= image_tag admin.second_story_photo.url(:medium) %></td>
        <td><%= link_to 'Show', admin %></td>
        <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

