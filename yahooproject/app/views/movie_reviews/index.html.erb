<p id="notice"><%= notice %></p>

<h1>Listing Movie Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Nyt movie</th>
      <th>Headline</th>
      <th>Display title</th>
      <th>Mpaa rating</th>
      <th>Trailer url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_reviews.each do |movie_review| %>
      <tr>
        <td><%= movie_review.nyt_movie_id %></td>
        <td><%= movie_review.headline %></td>
        <td><%= movie_review.display_title %></td>
        <td><%= movie_review.mpaa_rating %></td>
        <td><%= movie_review.trailer_url %></td>
        <td><%= link_to 'Show', movie_review %></td>
        <td><%= link_to 'Edit', edit_movie_review_path(movie_review) %></td>
        <td><%= link_to 'Destroy', movie_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

